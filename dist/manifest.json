{
  "manifest_version": 2,
  "name": "Chrome Extension",
  "description": "A boilerplate project to quickly build a Chrome extension using TypeScript and React",
  "version": "1.0.0",
  "browser_action": {
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    },
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": ["lib/axios.min.js","js/backgroud.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["lib/react.min.js","js/content.js"],
      "run_at": "document_end"
    }
  ],
  "chrome_url_overrides": {
    "newtab": "newtab.html"
  },
  "options_page": "options.html",
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },

  "permissions": ["<all_urls>", "tabs"]
}
